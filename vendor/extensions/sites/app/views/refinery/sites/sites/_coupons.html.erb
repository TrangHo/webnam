<% content_for :meta_tags do %>
  <title><%= (@site.home_page.seo_title + ' - Coupons') if @site.home_page.seo_title.present? %></title>
  <%= raw(%(<meta name="description" content="#{@site.home_page.seo_description}" />)) if @site.home_page.seo_description.present? -%>
  <%= raw(%(<meta name="keywords" content="#{@site.home_page.seo_keywords}">)) if @site.home_page.seo_keywords.present? -%>
<% end %>

<section>
  <article class="post">
    <ul id="coupons">
      <% @site.coupons.order('position').each do |coupon| %>
		    <% if coupon.displayed %>
	        <li>
	          <%= render :partial => '/refinery/sites/coupons/coupon', :object => coupon %>
	        </li>
        <% end %>
    <% end %>
    </ul>

  </article>
</section>
