<% content_for :meta_tags do %>
  <title><%= (@site.home_page.seo_title + ' - Events') if @site.home_page.seo_title.present? %></title>
  <%= raw(%(<meta name="description" content="#{@site.home_page.seo_description}" />)) if @site.home_page.seo_description.present? -%>
  <%= raw(%(<meta name="keywords" content="#{@site.home_page.seo_keywords}">)) if @site.home_page.seo_keywords.present? -%>
<% end %>

<section>
  <article class="post">
    <ul id="event-list">
      <% @site.events.order("event_date desc").each do |event| %>
		    <% if event.published %>
	        <li>
	          <%= render :partial => '/refinery/sites/events/event', :object => event %>
	        </li>
        <% end %>
    <% end %>
    </ul>

  </article>
</section>
