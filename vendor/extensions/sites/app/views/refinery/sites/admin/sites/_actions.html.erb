<ul>
  <% if ::Refinery::Sites::Admin::SitesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sites_admin_sites_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_sites_admin_site_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Sites::Admin::SitesController.sortable? && ::Refinery::Sites::Site.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Sites"),
                 refinery.sites_admin_sites_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Sites"),
                 refinery.sites_admin_sites_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
