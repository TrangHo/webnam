<% content_for :body_content_title do %>
  <%= @coupon.title %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1>Site</h1>
    <p>

      <%=raw @coupon.site_id %>

    </p>
  </section>

  <section>
    <h1>Displayed</h1>
    <p>

      <%=raw @coupon.displayed %>

    </p>
  </section>

  <section>
    <h1>Decoration</h1>
    <p>

      <%=raw @coupon.decoration %>

    </p>
  </section>

  <section>
    <h1>Title</h1>
    <p>

      <%=raw @coupon.title %>

    </p>
  </section>

  <section>
    <h1>Description</h1>
    <p>

      <%=raw @coupon.description %>

    </p>
  </section>

  <section>
    <h1>Expiry</h1>
    <p>

      <%=raw @coupon.expiry %>

    </p>
  </section>

  <section>
    <h1>Max Number</h1>
    <p>

      <%=raw @coupon.max_number %>

    </p>
  </section>

  <section>
    <h1>Seed Number</h1>
    <p>

      <%=raw @coupon.seed_number %>

    </p>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="coupons">
      <% @coupons.each do |coupon| %>
        <li>
          <%= link_to coupon.title, refinery.sites_coupon_path(coupon) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
