<% content_for :meta_tags do %>
  <title><%= (@site.home_page.seo_title + ' - Search results') if @site.home_page.seo_title.present? %></title>
  <%= raw(%(<meta name="description" content="#{@site.home_page.seo_description}" />)) if @site.home_page.seo_description.present? -%>
  <%= raw(%(<meta name="keywords" content="#{@site.home_page.seo_keywords}">)) if @site.home_page.seo_keywords.present? -%>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "search-results" %>
<% end %>

<div class="search-results-container">
  <h3><%= t('search_results_for', :count => @results.count, :what => params[:query]) %></h3>
  <ul id="search-results">
    <% @results.each do |result| %>
      <li>
        <h3><%= link_to t(result.search_title).titleize, '/sites/' + @slug +'/'+ result.search_title %></h3>
      </li>
    <% end %>
  </ul>
</div>




