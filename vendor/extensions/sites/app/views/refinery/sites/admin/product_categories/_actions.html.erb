<ul>
  <% if ::Refinery::Sites::Admin::ProductCategoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sites_admin_product_categories_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_sites_admin_product_category_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Sites::Admin::ProductCategoriesController.sortable? && ::Refinery::Sites::ProductCategory.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Product Categories"),
                 refinery.sites_admin_product_categories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Product Categories"),
                 refinery.sites_admin_product_categories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
