<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "design-style" %>
  <style>

	  div #design-show{
		  width: 550px;
		  height: 875px;
		  float: right;
		  text-align: left;
		  border-style: solid;
		  border-color: #808080;
		  padding: 10px 50px;
		  font-size: 14px;
		  <% if @site.design.background_image.present? %>
		    background: <%= @site.design.background_color %> url("<%= @site.design.background_image.url %>") <%= background_repeat(@site.design.background_repeat) %>  top center;
	    <% end %>
	  }

	  div #design-show #header {
		  width: 100%;
	  }

	  <% if @site.logo.present? %>
		  div #design-show #header #branding h1 a {
			  background: url("<%= @site.logo.url %>") no-repeat -5px -9px;
		  }
	  <% end %>

	  div #design-show #header {
		  background-image: -o-linear-gradient(top, <%= @site.design.menu_color %> 35%, <%= darken_color(@site.design.menu_color,0.6) %> 75%);
		  background-image: -moz-linear-gradient(top, <%= @site.design.menu_color %> 35%, <%= darken_color(@site.design.menu_color,0.6) %> 75%);
		  background-image: -webkit-linear-gradient(top, <%= @site.design.menu_color %> 35%, <%= darken_color(@site.design.menu_color,0.6) %> 75%);
		  background-image: -ms-linear-gradient(top, <%= @site.design.menu_color %> 35%, <%= darken_color(@site.design.menu_color,0.6) %> 75%);
		  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(75%, <%= darken_color(@site.design.menu_color,0.6) %>), color-stop(35%, <%= @site.design.menu_color %>));
	  }

	  div #design-show #footer {
		  background-image: -o-linear-gradient(top, <%= @site.design.foreground_color %> 25%, <%= darken_color(@site.design.menu_color,0.75) %> 75%);
		  background-image: -moz-linear-gradient(top, <%= @site.design.foreground_color %> 25%, <%= darken_color(@site.design.menu_color,0.75) %> 75%);
		  background-image: -webkit-linear-gradient(top, <%= @site.design.foreground_color %> 25%,<%= darken_color(@site.design.menu_color,0.75) %> 75%);
		  background-image: -ms-linear-gradient(top, <%= @site.design.foreground_color %> 25%, <%= darken_color(@site.design.menu_color,0.75) %> 75%);
		  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(75%, <%= darken_color(@site.design.menu_color,0.75) %>), color-stop(25%, <%= @site.design.foreground_color %>));
	  }

	  div #design-show table {
		  border: 1px solid black;
	  }

	  div #design-show caption {
		  border: 1px solid black;
		  border-bottom: 0px;
		  padding: 4px 5px;
	  }

	  div #design-show td {
		  border: 1px solid black;
		  border-bottom: 0px;
		  padding: 4px 5px;
	  }

	  div #home-content {
		  padding: 0px 15px;
	  }

  </style>

<% end %>

