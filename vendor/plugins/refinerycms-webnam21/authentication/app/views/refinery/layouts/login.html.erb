<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <%= render '/refinery/admin/head' %>
  <body class='login <%= I18n.locale %>'>
    <div id='tooltip_container'></div>
    <header>
	    <div>
	      <%= image_tag 'white-pink.png' %>
	    </div>
      <h1 style="color: white"><%= yield :header %></h1>
    </header>
    <div id="page_container">
      <div id="page">
        <div id="content" class="clearfix">
          <div id="flash_container">
            <%= render '/refinery/message' %>
          </div>
          <%= yield %>
        </div>
      </div>
      <div id='signature'>
        Developed by <%= link_to (image_tag 'madwagon50.png', :alt => 'MadWagon.co'), 'http://madwagon.co', :target => 'blank' %>
      </div>
    </div>
  </body>
</html>
